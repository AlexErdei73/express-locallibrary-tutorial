<%- include("_header") %>
<h1><%= title %>: <%= book.title %></h1>
<p><%= book.summary %></p>
<% if (book_instances.length) { %>
<p>
  <strong
    >Delete the following book instances before attempting to delete this
    book.</strong
  >
</p>
<div style="margin-left: 20px; margin-top: 20px">
  <h4>Book instances</h4>
  <dl>
    <% book_instances.forEach(function(bookinstance) { %>
    <dt><a href="<%= bookinstance.url %>"><%= bookinstance._id %></a></dt>
    <dd><%= bookinstance.imprint %></dd>
    <% }) %>
  </dl>
</div>
<% } else { %>
<p>Do you really want to delete this Book?</p>
<form action="" method="POST">
  <div class="form-group">
    <input
      type="hidden"
      name="bookid"
      id="bookid"
      value="<%= book._id %>"
      class="form-control"
      required
    />
  </div>
  <button type="submit" class="btn btn-primary">Delete</button>
</form>
<% } %> <%- include("_footer") %>
